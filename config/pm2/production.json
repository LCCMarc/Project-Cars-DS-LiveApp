{
  "apps": [{
    "name"       : "pcars-live-prod",
    "script"     : "./node_modules/sails/bin/sails.js",
    "arguments"  : ["lift", "--prod", "--port=13370"],
    "instances"  : 1,
    "exec_mode"  : "cluster_mode",
    "error_file" : "log/node-app.stderr.log",
    "out_file"   : "log/node-app.stdout.log",
    "pid_file"   : "node-app.pid",
    "log_date_format": "YYYY-MM-DD HH:mm Z"
  }]
}
