<div class="container content-container">

  <div class="col-sm-offset-2">
    <h1><%= __('password_reset') %></h1>
  </div>

  <form action="/reset" class="form-horizontal" method="post">

    <div class="form-group">
      <label class="col-sm-2 control-label" for="inputPassword"><%= __('new_password') %></label>
      <div class="col-sm-4">
        <input class="form-control" id="inputPassword" name="passwordNew" type="password">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="inputPassword"><%= __('new_password_confirmation') %></label>
      <div class="col-sm-4">
        <input class="form-control" id="inputPassword" name="passwordNew2" type="password">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <button class="btn btn-danger" type="submit"><%= __('reset') %></button>
      </div>
    </div>

  </form>

</div>
