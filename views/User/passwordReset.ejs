<div class="site">
  <div class="container">
    <div class="row">
      <h1><%= __('password_reset') %></h1>
    </div>
    <div class="row">
      <div class="col-md-12">
        <form action="/reset" method="post" class="form-horizontal">
          <div class="form-group">
            <label for="passwordNew"><%= __('new_password') %></label>
            <input type="password" class="form-control" name="passwordNew"/>

          </div>
          <div class="form-group">
            <label for="passwordNew2"><%= __('new_password_confirmation') %></label>
            <input type="password" class="form-control" name="passwordNew2"/>

          </div>

          <input type="submit" id="reset--pass"value="<%= __('reset') %>"/>
        </form>
      </div>
    </div>
  </div>
</div>
