<div class="container content-container">

  <div class="col-sm-offset-2">
    <h1><%= __('signup') %></h1>
  </div>

  <form action="/signup" class="form-horizontal" method="post">

    <div class="form-group">
      <label class="col-sm-2 control-label" for="inputUsername"><%= __('whats_your_username') %></label>
      <div class="col-sm-4">
        <input class="form-control" id="inputUsername" name="username">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="inputEmail"><%= __('whats_your_email') %></label>
      <div class="col-sm-4">
        <input class="form-control" id="inputEmail" name="email" type="email">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="inputPassword"><%= __('choose_password') %></label>
      <div class="col-sm-4">
        <input class="form-control" id="inputPassword" name="password" type="password">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <button class="btn btn-danger" type="submit"><%= __('signup') %></button>
      </div>
    </div>

  </form>

</div>
