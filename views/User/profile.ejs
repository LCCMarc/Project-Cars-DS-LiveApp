<div class="site">
    <div class="container">
        <%- partial ('../partials/flash.ejs') %>
        <h1><%= __('my_profile') %></h1>
        <section id="profile">
            <div class="col-md-12">
                <h3><%= __('user_profile') %></h3>
                <div class="row">
                    <div class="col-sm-4">
                        <img alt="profile-avatar" class="img-circle" src="<%= user.steamAvatarFull %>"/>
                    </div>
                    <div class="col-sm-8">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <b><%= __('username') %>:</b>
                                <span class="text-right"><%= user.username %></span>
                            </li>
                            <li class="list-group-item">
                                <b><%= __('registred') %></b>
                                <span class="text-right"><%= user.createdAt %></span>
                            </li>
                            <li class="list-group-item">
                                <form action="/profile" class="form-horizontal" method="POST">
                                    <div class="form-group">
                                        <div class="col-sm-2">
                                            <b><%= __('steam_id') %></b>
                                        </div>
                                        <div class="col-sm-6">
                                            <input class="form-control" id="steam_id" type="text" value="<% if(user.driver !== undefined){ %><%= user.driver[0].steam_id %><% } %>">
                                        </div>
                                        <div class="col-sm-2"><input class="btn btn-primary" type="submit" value="<%= __('update') %>"/></div>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr>
                <% if(user.drivers) { %>
                    <div class="row">
                        <% if(user.driver !== undefined){ %>
                            <h3><%= __('driver_profile') %></h3>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="race_count"><%= __('race') %>:</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" disabled id="race_count" type="text" value="<%= user.drivers[0].race_count %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="pole_count"><%= __('pole') %>:</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" disabled id="pole_count" type="text" value="<%= user.drivers[0].pole_count %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="bestlaps_count"><%= __('bestlaps') %>:</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" disabled id="bestlaps_count" type="text" value="<%= user.drivers[0].bestlaps_count %>">
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </section>
    </div>
</div>
