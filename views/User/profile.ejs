<div class="site">
  <div class="container">
    <%- partial ('../partials/flash.ejs') %>
    <h1><%= __('my_profile') %></h1>
    <section id="profile">
      <div class="col-md-12">
        <h3><%= __('user_profile') %></h3>
        <div class="row">
          <div class="col-sm-4">
            <img src="http://lorempixel.com/240/240/sports/6/" alt="profile-avatar" class="img-circle"/>
          </div>
          <div class="col-sm-8">
            <ul class="list-group">
              <li class="list-group-item"><b><%= __('username') %>:</b> <span class="text-right"><%= user.username %></span></li>
              <li class="list-group-item"><b><%= __('email') %>:</b> <span class="text-right"><%= user.email %></span></li>
              <li class="list-group-item"><b><%= __('registred') %></b> <span class="text-right"><%= user.createdAt %></span></li>
              <li class="list-group-item">
                <form action="/profile" method="POST" class="form-horizontal">
                  <div class="form-group">
                    <div class="col-sm-2">
                      <b><%= __('steam_id') %></b>
                    </div>
                    <div class="col-sm-6">
                      <input type="text" class="form-control" id="steam_id" value="
                      <% if(user.driver !== undefined){ %><%= user.driver[0].steam_id %><% } %>
                      ">
                    </div>
                    <div class="col-sm-2"><input type="submit" value="<%= __('update') %>" class="btn btn-primary" /></div>
                  </div>
                </form>
              </li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row">
          <% if(user.driver !== undefined){ %>
          <h3><%= __('driver_profile') %></h3>
          <div class="col-sm-12">
            <div class="form-group">
              <label for="race_count" class="col-sm-2 control-label"><%= __('race') %>:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="race_count" value="<%= user.driver[0].race_count %>" disabled>
              </div>
            </div>
            <div class="form-group">
              <label for="pole_count" class="col-sm-2 control-label"><%= __('pole') %>:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="pole_count" value="<%= user.driver[0].pole_count %>" disabled>
              </div>
            </div>
            <div class="form-group">
              <label for="bestlaps_count" class="col-sm-2 control-label"><%= __('bestlaps') %>:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="bestlaps_count" value="<%= user.driver[0].bestlaps_count %>" disabled>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </div>
</div>
