<div class="container" style="margin-top:50px">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-8">
            <% for (i in events) { %>
            <div class="col-md-12">
                <div class="panel panel-default events--panel">
                    <a href="/events/<%- events[i].id %>"><img src="<%- events[i].thumb %>" class="img-responsive"/></a>
                    <div class="panel-body">
                        <div class="event--infos">
                            <i class="fa fa-calendar"></i> <b><%- events[i].start.toISOString().slice(0, 10).replace('T', ' ') %></b> to <b><%- events[i].end.toISOString().slice(0, 10).replace('T', ' ') %></b> @ <b><%- events[i].track.name %> </b> <br/>
                            <i class="fa fa-car"></i> <b><%- events[i].group.name %></b> - <b><%- events[i].car.name %></b>
                        </div>
                        <p>
                            <%- events[i].content.slice(0, 250) %><% if(events[i].content.length > 250){%>...<%}%>
                        </p>
                    </div>
                    <div class="panel-footer">
                        <a class="btn btn-danger btn-block" href="/events/<%- events[i].id %>">Read More <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <aside>
            <div class="col-md-4">
                <div class="panel panel-default" id="home_status">
                    <div class="panel-heading">
                        <h4><i class="fa fa-plug"></i> Server Status</h4>
                    </div>
                    <div class="panel-body">
                        <div id="home_server--status"></div>
                        <h5>Connected</h5>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="home_server--connected">
                            </tbody>
                        </table>
                        <a class="btn btn-danger btn-block" href="#" role="button">Show Live &raquo;</a>
                    </div>
                </div>
                <div class="panel panel-default" id="home_most-active">
                    <div class="panel-heading">
                        <h4><i class="fa fa-users"></i> Most Active</h4>
                    </div>
                    <div class="panel-body">
                        <% for (var i in drivers) { %>
                            <div class="col-md-8"><%- drivers[i].name %></div>
                            <div class="col-md-4"><%- drivers[i].laps.length %> laps</div>
                        <% } %>
                    </div>
                </div>                
            </div> 
        </aside>
               
    </div>
    <hr>

    <footer>
        <p>&copy; Jean-Christophe Pires - 2015</p>
    </footer>
</div> <!-- /container -->
