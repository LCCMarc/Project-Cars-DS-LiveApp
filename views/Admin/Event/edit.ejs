                          <div class="col-md-12">
                            <div class="form-group">
                              <div class="col-md-3">
                                <label for="DamageType"><%= __('damage') %>:</label>
                                <select name="DamageType" class="form-control">
                                  <option value="0" <% if(event.DamageType === 0){%> <%- "selected"%> <% } %> ><%= __('off') %></option>
                                  <option value="1" <% if(event.DamageType === 1){%> <%- "selected"%> <% } %> ><%= __('visual_only') %></option>
                                  <option value="2" <% if(event.DamageType === 2){%> <%- "selected"%> <% } %> ><%= __('performance_impacting') %></option>
                                  <option value="3" <% if(event.DamageType === 3){%> <%- "selected"%> <% } %> ><%= __('full') %></option>
                                </select>
                              </div>
                              <div class="col-md-3">
                                <label for="TireWearType"><%= __('test') %>Tire Wear:</label>
                                <select name="TireWearType" class="form-control">
                                  <option value="6" <% if(event.TireWearType === 6){%> <%- "selected"%> <% } %> ><%= __('standard') %></option>
                                  <option value="7" <% if(event.TireWearType === 7){%> <%- "selected"%> <% } %> ><%= __('slow') %></option>
                                  <option value="8" <% if(event.TireWearType === 8){%> <%- "selected"%> <% } %> ><%= __('off') %></option>
                                  <option value="5" <% if(event.TireWearType === 5){%> <%- "selected"%> <% } %> >x2</option>
                                  <option value="4" <% if(event.TireWearType === 4){%> <%- "selected"%> <% } %> >x3</option>
                                  <option value="3" <% if(event.TireWearType === 3){%> <%- "selected"%> <% } %> >x4</option>
                                  <option value="2" <% if(event.TireWearType === 2){%> <%- "selected"%> <% } %> >x5</option>
                                  <option value="1" <% if(event.TireWearType === 1){%> <%- "selected"%> <% } %> >x6</option>
                                  <option value="0" <% if(event.TireWearType === 0){%> <%- "selected"%> <% } %> >x7</option>
                                </select>
                              </div>
                              <div class="col-md-3">
                                <label for="FuelUsageType"><%= __('fuel_usage') %>:</label>
                                <select name="FuelUsageType" class="form-control">
                                  <option value="0" <% if(event.FuelUsageType === 0){%> <%- "selected"%> <% } %> ><%= __('standard') %></option>
                                  <option value="1" <% if(event.FuelUsageType === 1){%> <%- "selected"%> <% } %> ><%= __('slow') %></option>
                                  <option value="2" <% if(event.FuelUsageType === 2){%> <%- "selected"%> <% } %> ><%= __('off') %></option>
                                </select>
                              </div>
                              <div class="col-md-3">
                                <label for="PenaltiesType"><%= __('penalties') %>:</label>
                                <select name="PenaltiesType" class="form-control">
                                  <option value="0" <% if(event.PenaltiesType === 0){%> <%- "selected"%> <% } %> ><%= __('none') %></option>
                                  <option value="1" <% if(event.PenaltiesType === 1){%> <%- "selected"%> <% } %> ><%= __('full') %></option>
                                </select>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <div class="col-md-4">
                                <label for="AllowedViews"><%= __('allowed_views') %>:</label>
                                <select name="AllowedViews" class="form-control">
                                  <option value="0" <% if(event.AllowedViews === 0){%> <%- "selected"%> <% } %> ><%= __('any') %></option>
                                  <option value="1" <% if(event.AllowedViews === 1){%> <%- "selected"%> <% } %> ><%= __('all') %></option>
                                  <option value="2" <% if(event.AllowedViews === 2){%> <%- "selected"%> <% } %> ><%= __('cockpit_and_helmet') %></option>
                                  <option value="3" <% if(event.AllowedViews === 3){%> <%- "selected"%> <% } %> ><%= __('cockpit') %></option>
                                  <option value="4" <% if(event.AllowedViews === 4){%> <%- "selected"%> <% } %> ><%= __('helmet') %></option>
                                </select>
                              </div>
                              <div class="col-md-4">
                                <label for="DateProgression"><%= __('date_progression') %>:</label>
                                <input type="number" name="DateProgression" class="form-control" value="<%- event.DateProgression %>"/>
                              </div>
                              <div class="col-md-4">
                                <label for="ForecastProgression"><%= __('forecast_progression') %>:</label>
                                <input type="number" name="ForecastProgression" class="form-control" value="<%- event.ForecastProgression %>"/>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <div class="col-md-3">
                                <label for="WeatherSlot1"><%= __('weather_slot') %> 1:</label>
                                <select name="WeatherSlot1" class="form-control">
                                  <option value="0" <% if(event.WeatherSlot1 === 0){%> <%- "selected"%> <% } %> ><%= __('select_weather') %></option>
                                  <option value="-934211870" <% if(event.WeatherSlot1 === -934211870){%> <%- "selected"%> <% } %> ><%= __('sunny') %></option>
                                </select>
                              </div>
                              <div class="col-md-3">
                                <label for="WeatherSlot2"><%= __('weather_slot') %>2:</label>
                                <select name="WeatherSlot2" class="form-control">
                                  <option value="0" <% if(event.WeatherSlot2 === 0){%> <%- "selected"%> <% } %> ><%= __('select_weather') %></option>
                                  <option value="-934211870" <% if(event.WeatherSlot2 === -934211870){%> <%- "selected"%> <% } %> ><%= __('sunny') %></option>
                                </select>
                              </div>
                              <div class="col-md-3">
                                <label for="WeatherSlot3"><%= __('weather_slot') %> 3:</label>
                                <select name="WeatherSlot3" class="form-control">
                                  <option value="0" <% if(event.WeatherSlot3 === 0){%> <%- "selected"%> <% } %> ><%= __('select_weather') %></option>
                                  <option value="-934211870" <% if(event.WeatherSlot3 === -934211870){%> <%- "selected"%> <% } %> ><%= __('sunny') %></option>
                                </select>
                              </div>
                              <div class="col-md-3">
                                <label for="WeatherSlot4"><%= __('test') %>Weather Slot4:</label>
                                <select name="WeatherSlot4" class="form-control">
                                  <option value="0" <% if(event.WeatherSlot4 === 0){%> <%- "selected"%> <% } %> ><%= __('select_weather') %></option>
                                  <option value="-934211870" <% if(event.WeatherSlot4 === -934211870){%> <%- "selected"%> <% } %> ><%= __('sunny') %></option>
                                </select>
                              </div>
                            </div>
                          </div>

                          <div class="col-md-12">
                            <div class="form-group">
                              <div class="col-md-6">
                                <label for="start"><%= __('start') %>:</label>
                                <input type="date" name="start" class="form-control datepicker" value="<%- event.start.toISOString().slice(0, 10).replace('T', ' ') %>"/>
                              </div>
                              <div class="col-md-6">
                                <label for="end"><%= __('end') %>:</label>
                                <input type="date" name="end" class="form-control datepicker" value="<%- event.end.toISOString().slice(0, 10).replace('T', ' ') %>"/>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <div class="col-md-4">
                                <label for="track"><%= __('track') %>:</label>
                                <select name="track" id="track-form" class="form-control">
                                  <option value="0"><%= __('select_track') %></option>
                                  <% for (var i=0; i<tracks.length; i++) { %>
                                  <option value="<%= tracks[i].id %>" <% if(event.track === tracks[i].id){%> <%- "selected"%> <% } %> ><%= tracks[i].name %></option>
                                  <% } %>
                                </select>
                              </div>
                              <div class="col-md-4">
                                <label for="group"><%= __('group') %>:</label>
                                <select name="group" id="group-form" class="form-control">
                                  <option value="0"><%= __('select_group') %></option>
                                  <% for (var i=0; i<groups.length; i++) { %>
                                  <option value="<%= groups[i].id %>" <% if(event.group === groups[i].id){%> <%- "selected"%> <% } %> ><%= groups[i].name %></option>
                                  <% } %>
                                </select>
                              </div>
                              <div class="col-md-4">
                                <label for="car"><%= __('car') %>:</label>
                                <select name="car" id="car-form" class="form-control">
                                  <option value="0"><%= __('select_car') %></option>
                                  <% for (var i=0; i<cars.length; i++) { %>
                                  <option value="<%= cars[i].id %>" <% if(event.car === cars[i].id){%> <%- "selected"%> <% } %> ><%= cars[i].name %></option>
                                  <% } %>
                                </select>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <textarea name="content"><%- event.content%></textarea>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <input type="file" id="fileInput" name="thumbnail"/>
                            </div>
                          </div>
                          <input type="submit" value="<%= __('edit') %>" class="btn btn-danger btn-block" />
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
