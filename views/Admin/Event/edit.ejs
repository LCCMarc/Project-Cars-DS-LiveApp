<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= __('add') %>: <%- event.name%> <a class="btn btn-danger pull-right" href="/admin/events"><i class="fa fa-arrow-left"></i> <%= __('back_to_event_list') %></a></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div id="content-text">
        <div class="panel panel-primary">
          <div class="panel-body">
            <div class="col-md-12">
              <form action="/admin/event/edit/<%- event.id %>" method="POST" class="form-horizontal" enctype="multipart/form-data">
                <!-- <div class="col-md-6"> -->
                <input type="hidden" name="id-val" value="<%- event.id %>"/>
                <div class="col-md-12">
                  <div class="form-group">
                    <div class="col-md-6">
                      <label for="name"><%= __('name') %>:</label>
                      <input type="text" name="name" class="form-control" value="<%- event.name %>"/>
                    </div>
                    <div class="col-md-6">
                      <label for="name"><%= __('server_name') %>:</label>
                      <input type="text" name="servername" class="form-control" value="<%- event.servername %>"/>
                    </div>
                    <div class="col-md-6">
                      <label for="dateIngame"><%= __('date_ingame') %></label>
                      <input type="date" name="dateIngame" class="form-control datepicker" value="<%- event.dateIngame.toISOString().slice(0, 10).replace('T', ' ') %>"/>
                    </div>
                    <div class="col-md-6">
                      <label for="timeIngame"><%= __('time_ingame') %></label>
                      <input type="time" name="timeIngame" class="form-control timepicker" value="<%- event.dateIngame.toTimeString().slice(0, 8)%>"/>
                    </div>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <div class="col-md-4">
                      <label for="RaceLength"><%= __('qualify_length') %>:</label>
                      <input type="number" name="PracticeLength" class="form-control"  value="<%- event.PracticeLength %>"/>
                    </div>
                    <div class="col-md-4">
                      <label for="RaceLength"><%= __('practice_length') %>:</label>
                      <input type="number" name="QualifyLength" class="form-control"  value="<%- event.QualifyLength %>"/>
                    </div>
                    <div class="col-md-4">
                      <label for="RaceLength"><%= __('race_length') %>:</label>
                      <input type="number" name="RaceLength" class="form-control"  value="<%- event.RaceLength %>"/>
                    </div>
                  </div>
                </div>

