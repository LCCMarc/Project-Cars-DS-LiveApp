<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= __('laps') %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <%- partial ('../../partials/pagination.ejs') %>
                    <table class="table table-hovered table-condensed">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th><%= __('driver') %></th>
                            <th><%= __('track') %></th>
                            <th><%= __('group') %></th>
                            <th><%= __('count') %></th>
                            <th><%= __('lap_time') %></th>
                            <th><%= __('created_at') %></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (var i in laps) {%>
                        <tr>
                            <td><%- laps[i].id %></td>
                            <td><%- laps[i].owner.name %></td>
                            <td><%- laps[i].Track.name %></td>
                            <td><%- laps[i].group.name %></td>
                            <td><% if (laps[i].CountThisLapTimes == 1) { %> <span class="text-success"><%= __('true') %></span> <% } else { %> <span class="text-danger"><%= __('false') %></span> <% } %></td>
                            <td class="ms--time"><%- laps[i].LapTime %></td>
                            <td class="global--time"><%- laps[i].createdAt %></td>
                            <td><a class="btn btn-danger pull-right delete--lap" href="/admin/lap/<%- laps[i].id %>"><%= __('delete') %></a></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                    <%- partial ('../../partials/pagination.ejs') %>
                </div>
            </div>
        </div>
    </div>
</div>
